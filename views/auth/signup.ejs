<%- include('../includes/navigation.ejs') %>

<body style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); min-height: 100vh; font-family: 'Open Sans', sans-serif; margin: 0; display: flex; flex-direction: column;">

    <main style="flex: 1; display: flex; align-items: center; justify-content: center; padding: 1rem; min-width: 40vw;">
        <form class="login-form" action="/signup" method="POST" style="background: rgba(255, 255, 255, 0.95); padding: 2.5rem; border-radius: 20px; box-shadow: 0 15px 35px rgba(0, 0, 0, 0.2); width: 90%; max-width: 600px; margin: auto;">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">

            <div class="form-control" style="margin-bottom: 1.5rem;">
                <label for="email" style="display: block; margin-bottom: 0.5rem; color: #4a5568; font-weight: 600;">E-Mail</label>
                <input type="email" name="email" id="email" style="width: 100%; padding: 1rem; border: 2px solid #e2e8f0; border-radius: 10px; font-size: 1rem; box-sizing: border-box;">
            </div>
            <div class="form-control" style="margin-bottom: 1.5rem;">
                <label for="password" style="display: block; margin-bottom: 0.5rem; color: #4a5568; font-weight: 600;">Password</label>
                <input type="password" name="password" id="password" style="width: 100%; padding: 1rem; border: 2px solid #e2e8f0; border-radius: 10px; font-size: 1rem; box-sizing: border-box;">
            </div>
            <div class="form-control" style="margin-bottom: 1.5rem;">
                <label for="confirmPassword" style="display: block; margin-bottom: 0.5rem; color: #4a5568; font-weight: 600;">Confirm Password</label>
                <input type="password" name="confirmPassword" id="confirmPassword" style="width: 100%; padding: 1rem; border: 2px solid #e2e8f0; border-radius: 10px; font-size: 1rem; box-sizing: border-box;">
            </div>
            <button class="btn" type="submit" style="width: 100%; padding: 1rem; background: linear-gradient(135deg, #667eea, #764ba2); border: none; border-radius: 10px; color: white; font-size: 1rem; font-weight: 700; cursor: pointer; text-transform: uppercase; letter-spacing: 1px;">Sign-Up</button>
        </form>
    </main>
<%- include('../includes/end.ejs') %>